---
import markdown from "./markdown";
import "highlight.js/styles/tomorrow-night-bright.css";
import "katex/dist/katex.min.css";

type Props = { body: string };

const { body } = Astro.props;

const content = markdown.render(body);
---

<article class="mt-5">
  <Fragment set:html={content} />
</article>

<style>
  /* from this 
    https://github.com/markdowncss/retro 
    https://github.com/goessner/markdown-it-texmath/blob/master/css/texmath.css
  */

  article :global(katex) {
    color: whitesmoke !important;
    font-size: 1.4em !important;
  }

  article :global(eq) {
    display: inline-block;
  }

  article :global(eqn) {
    display: block;
  }

  article :global(section.eqno) {
    display: flex;
    flex-direction: row;
    align-content: space-between;
    align-items: center;
  }

  article :global(section.eqno > eqn) {
    width: 100%;
    margin-left: 3rem;
  }

  article :global(section.eqno > span) {
    width: 3rem;
    text-align: right;
  }

  article :global(pre) {
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    margin-bottom: 0.6rem;
    margin-top: 0.6rem;
    overflow-x: scroll;
  }

  @media (min-width: 640px) {
    article :global(pre) {
      overflow-x: auto;
    }
  }

  article :global(code:not(pre > code)) {
    color: #d54e53;
    background-color: #000;
  }

  article :global(blockquote) {
    border-left: 3px solid #22c55e;
    padding-bottom: 0.25rem;
    padding-top: 0.25rem;
    padding-left: 1rem;
    padding-right: 1em;
    page-break-inside: avoid;
    background-color: #27272a;
    margin-top: 1em;
    margin-bottom: 1em;
    margin-left: 1em;
    margin-right: 1.5em;
  }

  article :global(a),
  article :global(a:visited) {
    text-decoration: underline;
    text-underline-offset: 1px;
    color: #60a5fa;
  }

  article :global(a:hover),
  article :global(a:focus),
  article :global(a:active) {
    color: #2563eb;
  }

  article :global(h1),
  article :global(h2),
  article :global(h3),
  article :global(h4) {
    margin: 1.2rem 0 0.5rem;
    font-weight: bold;
    line-height: 1.42;
  }

  article :global(h1) {
    margin-top: 0;
    font-size: 2.25rem;
  }

  article :global(h2) {
    font-size: 2rem;
  }

  article :global(h3) {
    font-size: 1.8rem;
  }

  article :global(h4) {
    font-size: 1.5rem;
  }

  article :global(h5) {
    font-size: 1.17rem;
    margin-top: 0.8rem;
    margin-bottom: 0.3rem;
    font-weight: bold;
  }

  article :global(h6) {
    font-size: 0.88rem;
  }

  article :global(p),
  article :global(li) {
    color: #e2e8f0;
    font-size: 1rem;
    line-height: 1.5rem;
  }

  article :global(strong) {
    color: white;
  }

  article :global(ul) {
    list-style-type: disc;
    list-style-position: outside;
    margin-left: 1rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  article :global(ol) {
    list-style-type: decimal;
    list-style-position: outside;
    margin-left: 1.2rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  article :global(li) {
    margin-top: 0.2rem;
  }

  article :global(img) {
    margin-left: auto;
    margin-right: auto;
    margin-top: 0.7rem;
    margin-bottom: 0.7rem;
  }

  article :global(figure) {
    color: #d1d5db;
    font-style: italic;
    margin-bottom: 0.7rem;
  }
</style>
